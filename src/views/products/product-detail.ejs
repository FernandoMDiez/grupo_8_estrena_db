<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Estrena</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style-product-detail.css">
  <link rel="stylesheet" href="/css/style-general.css">
</head>

<body>
  <!-- se obtiene el header de la carpeta  Partials -->
  <%- include("../partials/header") %>

    <main>
      <div class="product">
        <div class="gallery">
          <img src="/images/<%=product.image%>" alt="">
        </div>
        <div class="info">
          <h1 class="title">
            <%=product.name%>
          </h1>

          <div class="description">
            <%=product.description%>
          </div>

          <div class="price">
            <%=product.price%>
          </div>


          <!--  Aqui se cargan las categorias dinamicamente -->
          <div class="sizes">
            <h3>Categoria:</h3>
            <select name="category" id="category">

              <% categories.forEach(category=> { %>
                <% if (category.categoriaId==product.category ) { %>
                  <option value="<%= category.categoriaId %>" selected>
                    <%= category.nombre %>
                  </option>
                  <% } %>

                    <option value="<%= category.categoriaId %>">
                      <%= category.nombre %>
                    </option>
                    <% }) %>
            </select>
          </div>

          <!--  Aqui se cargan las categorias dinamicamente -->
          <div class="sizes">
            <h3>Talla:</h3>
            <select name="size" id="size">

              <% sizes.forEach(size=> { %>
                <% if (size.sizeId==product.size ) { %>
                  <option value="<%= size.sizeId %>" selected>
                    <%= size.nombre %>
                  </option>
                  <% } %>

                    <option value="<%= size.sizeId %>">
                      <%= size.nombre %>
                    </option>
                    <% }) %>
            </select>
          </div>
          <!--  Aqui se crean los categorias dinamicamente -->


          <!--  Aqui se cargan los colores dinamicamente -->
          <div class="sizes">
            <h3>Color:</h3>

            <select name="color" id="color">

              <% colores.forEach(color=> { %>
                <% if (color.colorId==product.color ) { %>
                  <option value="<%= color.colorId %>" selected>
                    <%= color.nombre %>
                  </option>
                  <% } %>

                    <option value="<%= color.colorId %>">
                      <%= color.nombre %>
                    </option>
                    <% }) %>
            </select>
          </div>
          <!--  Aqui se crean los colores dinamicamente -->







          <div class="units">
            <h3>Unidades:</h3>
            <div class="unit-container">
              <div class="selector">
                <input type="number" placeholder="0" value="0">
              </div>
              <div class="avaliable">
                ¡5 unidades disponibles!
              </div>
            </div>
          </div>
          <div class="botones">
            <button class="addcart">
              <a href="/products/product-cart/<%= product.id %>">AÑADIR AL CARRITO</a>
            </button>

            <div class="botones">
              <button class="addcart">
                <a href="/products/product-edition/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
              </button>

              <div class="botones">
                <button class="addcart">
                  <a href="/products/product-edition/<%= product.id %>" class="action-button edit">ELIMINAR PRODUCTO</a>

                </button>


              </div>
            </div>
          </div>
          <div class="other">
            <h3>Otros productos</h3>
            <div class="items">
              <div class="item">
              </div>
              <div class="item">TyP</div>
              <div class="item">TyP</div>
            </div>
          </div>
    </main>

    <!-- se obtiene el footer de la carpeta Partials -->
    <%- include("../partials/footer") %>

</body>

</html>