<!DOCTYPE html>
<html lang="en">

<!-- se obtiene el head de la carpeta Partials -->
<%- include("../partials/head-users") %>


  <body>
    <!-- se obtiene el header de la carpeta  Partials -->
    <%- include("../partials/header") %>

      <main>
        <form method="POST" action="/users/user-login">
          <div class="register-container">

            <h1 class="title">Login</h1>
            <div class="inputs">
              <label for="mail">E-mail</label>
              <input type="email" name="mail" id="mail" placeholder="Mail" required>
              <% if (locals.errors && errors.mail) { %>
                <div>
                  <%=errors.mail.msg %>
                </div>
                <% } %>
            </div>
            <div class="inputs">
              <label for="password">Contraseña</label>
              <input type="password" name="password" id="password" placeholder="Contraseña" required>
              <% if (locals.errors && errors.password) { %>
                <div>
                  <%=errors.password.msg %>
                </div>
                <% } %>
            </div>
            <div class="inputs">
              <label for="recordar_usuario">Recordarme</label>
              <input type="checkbox" name="recordar_usuario" id="recordar_usuario">
            </div>
            <div class="account-buttons">
              <button type="reset" class="account res">Cancelar</button>
              <button type="submit" class="account sub">Ingresar</button>
            </div>
            <p>O Ingresar con: </p>
            <div class="socialmedia-buttons">
              <button type="submit" class="socialmedia">
                <img
                  src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/2048px-Facebook_f_logo_%282019%29.svg.png"
                  alt="">
              </button>
              <button type="submit" class="socialmedia">
                <img src="https://rotulosmatesanz.com/wp-content/uploads/2017/09/2000px-Google_G_Logo.svg_.png" alt="">
              </button>
              <button type="submit" class="socialmedia">
                <img
                  src="https://www.canaljesustv.com/wp-content/uploads/2016/06/twitter-round-logo-png-transparent-background-7.png"
                  alt="">
              </button>
            </div>

          </div>
        </form>
      </main>
      <!-- se obtiene el footer de la carpeta Partials -->
      <%- include("../partials/footer") %>
  </body>

</html>