<header>
  <div class="header-container">
    <a class="icon" href="/">
      <img src="/images/logo-estrena.png" alt="">
    </a>
    <nav>
      <ul>
        <a href="/products/product-creation">Crear Producto</a></li>


        <% if (locals. isLogged) { %>
          <a href="/users/user-profile">Perfil de usuario</a></li>
          <a href="/users/logout">Logout de usuario</a></li>
          <% } else { %>
            <a href="/users/user-login">Ingresar</a></li>
            <a href="/users/user-register">Registro de usuario</a></li>
            <% } %>
              <a href="/users/perfil-user-list">Listado de Perfiles</a></li>
              <a href="/users/perfil-user-create">Crear Perfiles</a></li>
              <a href="/users/user-list">Listado de Usuarios</a></li>
      </ul>
    </nav>
    <div class="controls">
      <div class="searchbar">
        <form action="">
          <input type="text" name="" id="searchBar">
          <button type="submit">
            <img src="https://cdn.icon-icons.com/icons2/2469/PNG/512/magnifier_magnifying_glass_icon_149435.png" alt="">
          </button>
        </form>
      </div>
      <div class="buttons">
        <a href="/products/product-cart">
          <img src="https://cdn-icons-png.flaticon.com/512/1413/1413908.png" alt="">
        </a>
        <div class="user">
          <% if (locals. isLogged) { %>
            <p> Usuario: <%= locals.usuarioLogueado.firstName %>
            </p>
            <img src="/images/users/<%= locals.usuarioLogueado.image %>" alt="">


            <% } else { %>
              <a href="/users/user-login">
                <img
                  src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/OOjs_UI_icon_userAvatar.svg/2048px-OOjs_UI_icon_userAvatar.svg.png"
                  alt="">
              </a>
              <% } %>
        </div>
      </div>
    </div>
  </div>
</header>